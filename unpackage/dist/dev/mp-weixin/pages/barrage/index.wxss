.custom-nav-bar {
  position: fixed;
  top: 40rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 44px;
  padding: 0 15px;
  color: #fff;
  z-index: 999;
}
.barrage-wrap {
  color: #fff;
}
.barrage-wrap .barrage-text-wrap {
  width: 100vh;
  height: 100.2vw;
  background-color: #000;
  overflow: hidden;
  position: absolute;
  top: 50%;
  left: 50%;
  -webkit-transform: translate(-50%, -50%) rotate(90deg);
          transform: translate(-50%, -50%) rotate(90deg);
  line-height: 1;
}
.barrage-wrap .barrage-text-wrap .barrage-text {
  white-space: nowrap;
  position: absolute;
  line-height: 100vw;
  font-size: 80px;
  right: -400px;
}
.pop-wrap {
  color: #fff;
  padding: 20rpx;
}
.pop-wrap .barrage-pattern {
  display: flex;
  justify-content: space-around;
  align-items: center;
  padding: 20rpx 66rpx 10rpx;
}
.pop-wrap .barrage-poptext {
  display: flex;
  align-items: center;
  padding: 20rpx 66rpx 10rpx;
}
.pop-wrap .barrage-poptext .pop-button {
  width: 120rpx;
  margin-left: 20rpx;
}
.pop-wrap .barrage-font {
  display: flex;
  padding: 20rpx 66rpx 10rpx;
  flex-direction: column;
}
.pop-wrap .barrage-font .barrage-font-color {
  display: flex;
  justify-content: space-around;
  margin-top: 20rpx;
}
.pop-wrap .barrage-font .barrage-size {
  margin-left: 20rpx;
}
.pop-wrap .barrage-font .color-text {
  margin-left: 20rpx;
}
.footer-wrap {
  display: flex;
  justify-content: space-between;
  color: #fff;
  position: fixed;
  bottom: 0px;
  width: 100%;
}
.footer-wrap .footer-item {
  display: flex;
  flex-direction: column;
  flex: 1;
  padding: 36rpx 0rpx;
  font-size: 28rpx;
  align-items: center;
}

